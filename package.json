{
  "name": "appc.twilio",
  "description": "Connector to Twilio API",
  "version": "1.0.2",
  "author": "Axway R&D",
  "license": "Apache 2.0",
  "framework": "none",
  "keywords": [
    "appcelerator",
    "arrow",
    "connector",
    "twilio",
    "api"
  ],
  "repository": {},
  "private": true,
  "dependencies": {
    "semver": "^5.0.3",
    "twilio": "2.11.1",
    "pluralize": "^3.1.0",
    "appc-connector-utils": "0.0.11"
  },
  "devDependencies": {
    "arrow": "*",
    "husky": "^0.13.1",
    "nyc": "^10.1.2",
    "request": "^2.79.0",
    "sinon": "^1.17.7",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "tap": "10.3.0"
  },
  "scripts": {
    "start": "appc run",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "tap test/unit/*.js test/unit/lifecycle/*.js --color --bail --cov",
    "test:integration": "tap test/integration/*.js test/integration/lifecycle/*.js --color --bail --cov",
    "lint": "standard | snazzy",
    "lint-fix": "standard --fix | snazzy",
    "precommit": "npm run lint",
    "test:unit:lifecycle": "tap test/unit/lifecycle/*.js --color --bail --cov",
    "test:integration:lifecycle": "tap test/integration/lifecycle/*.js --color --bail --cov"
  },
  "standard": {
    "ignore": [
      ".nyc_output",
      ".vscode",
      "coverage",
      "node_modules"
    ]
  }
}
